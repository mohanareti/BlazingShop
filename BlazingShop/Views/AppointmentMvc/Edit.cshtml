@model BlazingShop.DomainModel.Appointment
@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: aliceblue;">
    <div class="col-md-10 mx-auto py-4">
        <div class="card" style="box-shadow:5px 10px #888888;">
            <div class="card-header bg-primary text-uppercase text-white">
                <h4>Confirm Appointment </h4>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Edit">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CustomerName" class="control-label">Name</label>
                                <input asp-for="CustomerName" class="form-control" value="@Model.CustomerName" readonly />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CustomerEmail" class="control-label">Email</label>
                                <input asp-for="CustomerEmail" class="form-control" value="@Model.CustomerEmail" readonly />
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CustomerPhone" class="control-label">Phone</label>
                                <input asp-for="CustomerPhone" class="form-control" value="@Model.CustomerPhone" readonly />
                                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Product" class="control-label">Product</label>
                                <input asp-for="Product" class="form-control" value="@Model.Product.PName" readonly />
                                <span asp-validation-for="Product" class="text-danger"></span>
                            </div>

                        </div>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </body>

