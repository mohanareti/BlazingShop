@model BlazingShop.DomainModel.Product
@{
    ViewData["Title"] = "Details";
}

<body style="background-color: aliceblue;">
    <div class="content px-4">
        <br>
        <h2 class="text-info">Product Details</h2>
        <div class="p-4 border rounded row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        Name
                    </div>
                    <div class="col-8">
                        <input value="@Model.PName" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Shade Color
                    </div>
                    <div class="col-8">
                        <input value="@Model.ShadeColor" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Price
                    </div>
                    <div class="col-8">
                        <input value="@Model.Price" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Category Name
                    </div>
                    <div class="col-8">
                        <input value="@Model.Category.CName" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" asp-controller="UserMvc" class="btn btn-success form-control">Back to List</a>
                    </div>
                    <div class="col-4">
                        <a asp-action="BookAppoint" asp-controller="UserMvc" asp-route-id="@Model.PId" class="btn btn-primary form-control">Book Appointment</a>
                        @*<button class="btn btn-primary form-control">
                                Book Appointment
                            </button>*@
                    </div>
                </div>
            </div>
            <div class="offset-1 col-3 ">
                <img src="~/Uploads/@Model.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9" />
            </div>
            <br>
        </div>

    </div>
    </body>


