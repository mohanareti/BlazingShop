@model BlazingShop.DomainModel.Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<body style="background-color: aliceblue;">
    <div class="col-md-10 mx-auto py-4">
        <div class="card">
            <div class="card-header bg-primary text-uppercase text-white">
                <h4>Create </h4>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CName" class="control-label">Category Name</label>
                                <input asp-for="CName" class="form-control" />
                                <span asp-validation-for="CName" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-sm btn-info rounded-0 text-uppercase" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
